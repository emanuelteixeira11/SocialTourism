<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tourism.social.socialtourism.resultsUI.DetailsActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@color/blue">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/grey"
                android:id="@+id/bottomBar">

                <info.hoang8f.widget.FButton
                    android:id="@+id/call_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_call"
                    android:drawablePadding="2dip"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:text="Ligar"
                    android:textColor="@android:color/white"
                    fbutton:cornerRadius="5dp"
                    fbutton:shadowEnabled="true"
                    fbutton:shadowHeight="6dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp" />

                <info.hoang8f.widget.FButton
                    android:id="@+id/directions_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_distance"
                    android:drawablePadding="2dip"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:text="Ir para o local"
                    android:textColor="@android:color/white"
                    fbutton:cornerRadius="5dp"
                    fbutton:shadowEnabled="true"
                    fbutton:shadowHeight="6dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp" />
            </LinearLayout>

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/content_scroll_view"
                android:layout_toLeftOf="@+id/scrollView_Photos"
                android:layout_alignParentLeft="true"
                android:layout_above="@+id/bottomBar"
                android:layout_alignParentTop="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_above="@+id/bottomBar"
                    android:layout_toLeftOf="@+id/scrollView_Photos"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_horizontal|left"
                    android:padding="10dp">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:text="Large Text"
                            android:id="@+id/detail_adress"
                            android:layout_alignParentLeft="false"
                            android:layout_alignParentStart="false"
                            android:layout_gravity="left"
                            android:layout_toRightOf="@+id/imageView"
                            android:gravity="center_vertical"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:textColor="#ffffffff" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageView"
                            android:src="@drawable/ic_address" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageView2"
                            android:src="@drawable/ic_clock" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:text="Large Text"
                            android:id="@+id/is_open"
                            android:layout_alignParentLeft="false"
                            android:layout_alignParentStart="false"
                            android:layout_gravity="left"
                            android:gravity="center_vertical"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:textColor="#ffffffff"
                            android:layout_toRightOf="@+id/imageView2" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageView3"
                            android:src="@drawable/ic_phone" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:text="Large Text"
                            android:id="@+id/phone_details"
                            android:layout_alignParentLeft="false"
                            android:layout_alignParentStart="false"
                            android:layout_gravity="left"
                            android:gravity="center_vertical"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:textColor="#ffffffff"
                            android:layout_toRightOf="@+id/imageView3" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageView4"
                            android:src="@drawable/ic_site" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:text="Large Text"
                            android:id="@+id/site_details"
                            android:layout_alignParentLeft="false"
                            android:layout_alignParentStart="false"
                            android:layout_gravity="left"
                            android:gravity="center_vertical"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:textColor="#ffffffff"
                            android:layout_toRightOf="@+id/imageView4"
                            android:editable="false"
                            android:autoLink="web"
                            android:textColorLink="#ffffffff" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/RelativeLayout">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/likes_details"
                            android:src="@drawable/ic_like_default" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:text="Large Text"
                            android:id="@+id/likes_text"
                            android:layout_alignParentLeft="false"
                            android:layout_alignParentStart="false"
                            android:layout_gravity="left"
                            android:gravity="center_vertical"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:textColor="#ffffffff"
                            android:layout_toRightOf="@+id/likes_details"
                            android:editable="false"
                            android:textColorLink="#ffffffff" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageView7"
                            android:src="@drawable/ic_types" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:text="Large Text"
                            android:id="@+id/types_details"
                            android:layout_alignParentLeft="false"
                            android:layout_alignParentStart="false"
                            android:layout_gravity="left"
                            android:gravity="center_vertical"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:textColor="#ffffffff"
                            android:layout_toRightOf="@+id/imageView7"
                            android:editable="false"
                            android:textColorLink="#ffffffff" />
                    </RelativeLayout>

                </LinearLayout>
            </ScrollView>

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/scrollView_Photos"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="false"
                android:layout_above="@+id/bottomBar" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/gallery_vertical_layout">

                </LinearLayout>
            </ScrollView>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/recicler_view_reviews"
        android:background="@color/Primary"
        android:layout_weight="2">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/cardListReview"
            android:layout_width="match_parent"
            android:layout_height="fill_parent" />

        </LinearLayout>
</LinearLayout>
